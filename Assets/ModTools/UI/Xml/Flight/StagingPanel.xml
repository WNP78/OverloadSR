<?xml version="1.0" encoding="utf-8"?>
<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\XmlLayout.xsd">
  <Include path="Ui/Xml/Styles.xml" />
  <Defaults>
    <TextMeshPro class="stage-group&gt;@TextMeshPro" fontSize="14" />
    <Panel class="stage-group" preferredHeight="70" tooltipPosition="Above" tooltipOffset="-10" onMouseEnter="OnMouseEnter(this);" onMouseExit="OnMouseExit(this);" />
    <Image class="stage-group&gt;@Image" color="Primary" width="30" height="30" offsetXY="0 10" />
    <Panel class="current-stage-hover" color="Button" />
  </Defaults>
  <VerticalLayout id="staging-panel" class="panel border draggable" padding="0" spacing="0" rectAlignment="LowerRight" contentSizeFitter="vertical" childAlignment="LowerCenter" width="80" height="0" childForceExpandHeight="false">
    <Panel id="stage-group-landing-legs" class="stage-group" tooltip="LandingLeg">
      <Image sprite="Ui/Sprites/Common/IconStagingLandingLeg" />
      <TextMeshPro text="x2" offsetXY="0 -20" />
    </Panel>
    <Panel id="stage-group-parachutes" class="stage-group" tooltip="Parachutes">
      <Image sprite="Ui/Sprites/Common/IconStagingParachute" />
      <TextMeshPro text="x2" offsetXY="0 -20" />
    </Panel>
    <Panel id="stage-group-fairings" class="stage-group" tooltip="Fairings">
      <Image sprite="Ui/Sprites/Common/IconStagingFairing" />
      <TextMeshPro text="x2" offsetXY="0 -20" />
    </Panel>
    <Panel id="stage-group-interstages" class="stage-group" tooltip="Interstages">
      <Image sprite="Ui/Sprites/Common/IconStagingInterstage" />
      <TextMeshPro text="x2" offsetXY="0 -20" />
    </Panel>
    <Panel id="stage-group-engines" class="stage-group" tooltip="Engines">
      <Image sprite="Ui/Sprites/Common/IconStagingEngine" />
      <TextMeshPro text="x2" offsetXY="0 -20" />
    </Panel>
    <Panel preferredHeight="50" hoverClass="current-stage-hover" onClick="OnStagingButtonClicked();">
      <Image color="Border" height="1" rectAlignment="UpperCenter" />
      <TextMeshPro text="STAGE" fontSize="16" color="LabelText" offsetXY="0 10" alignment="Center" />
      <TextMeshPro id="current-stage-number" text="1" fontSize="16" color="ValueText" offsetXY="0 -10" />
    </Panel>
  </VerticalLayout>
</XmlLayout>