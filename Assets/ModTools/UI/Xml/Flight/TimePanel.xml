<?xml version="1.0" encoding="utf-8"?>
<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\XmlLayout.xsd">
  <Include path="Ui/Xml/Styles.xml" />
  <Defaults>
    <Image class="time-button" color="Primary" width="20" height="20" opacity="0.5" hoverClass="time-button-hover" rectAlignment="MiddleRight" raycastTarget="true" tooltipPosition="Below" />
    <Image class="time-button-hover" opacity="0.75" />
    <Image class="time-button-selected" opacity="1.0" color="White" />
    <Image class="time-warp-button" color="#ffffff00" raycastTarget="true" tooltipPosition="Below" opacity="0.75" hoverClass="time-warp-button-hover" />
    <Image class="time-warp-button-hover" opacity="1.0" />
    <Image class="time-warp-arrow" sprite="Ui/Sprites/Common/IconChevronLeft" width="15" height="20" color="Primary" />
  </Defaults>
  <VerticalLayout class="panel border draggable" width="320" height="0" rectAlignment="UpperRight" contentSizeFitter="vertical" childAlignment="MiddleCenter" offsetXY="0 0">
    <Panel preferredHeight="40">
      <TextMeshPro id="time-text" onClickSound="Ui/Audio/ButtonClicked" class="value" text="06:12:11" width="140" height="50" rectAlignment="MiddleRight" alignment="Center" offsetXY="-170 0" fontSize="18" onClick="OnTimeClicked();" raycastTarget="true" />
      <Image id="mode-slow" class="time-button audio-btn-click" sprite="Ui/Sprites/Flight/IconTimeSlowMotion" offsetXY="-140 0" tooltip="Slow Motion" onClick="OnSlowMotionClicked();" />
      <Image id="mode-normal" class="time-button audio-btn-click" sprite="Ui/Sprites/Flight/IconTimePlay" offsetXY="-100 0" tooltip="Normal Speed" onClick="OnPlayClicked();" />
      <Image id="mode-fast" name="TimeFastForward" class="time-button audio-btn-click" sprite="Ui/Sprites/Flight/IconTimeFastForward" offsetXY="-60 0" tooltip="Fast Forward" onClick="OnFastForwardClicked();" />
      <Image id="mode-warp" name="TimeWarp" class="time-button audio-btn-click" sprite="Ui/Sprites/Flight/IconTimeWarp" offsetXY="-20 0" tooltip="Warp Speed" onClick="OnWarpModeClicked();" />
    </Panel>
    <Panel id="warp-panel" preferredHeight="40">
      <Image height="1" color="Border" rectAlignment="UpperCenter" />
      <Panel width="280">
        <TextMeshPro id="warp-text" class="White" text="100x" fontSize="16" width="120" />
        <Image class="time-warp-button audio-btn-click" offsetXY="30 0" width="40" rectAlignment="MiddleLeft" tooltip="Decrease Warp Speed" onClick="OnDecreaseWarpClicked();">
          <Image class="time-warp-arrow" />
        </Image>
        <Image class="time-warp-button audio-btn-click" offsetXY="-30 0" width="40" rectAlignment="MiddleRight" tooltip="Increase Warp Speed" onClick="OnIncreaseWarpClicked();">
          <Image class="time-warp-arrow" rotation="0 0 180" />
        </Image>
      </Panel>
    </Panel>
  </VerticalLayout>
</XmlLayout>