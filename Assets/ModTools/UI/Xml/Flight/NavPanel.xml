<?xml version="1.0" encoding="utf-8"?>
<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\XmlLayout.xsd">
  <Include path="Ui/Xml/Styles.xml" />
  <Defaults>
    <Image class="nav-sphere-button" width="48" height="48" color="Button" hoverClass="nav-sphere-button-hover" raycastTarget="true" />
    <Image class="nav-sphere-button-hover" color="ButtonHover" />
    <Image class="nav-sphere-button-selected" color="Primary" />
    <Image class="nav-sphere-button-icon" color="Primary" width="40" height="40" raycastTarget="false" />
    <Image class="nav-sphere-button-selected:nav-sphere-button-icon" color="White" />
  </Defaults>
  <Panel id="nav-panel" class="panel border draggable" width="200" height="130" rectAlignment="LowerLeft" opacity="1.0">
    <Image id="nav-sphere-lock" class="nav-sphere-button audio-btn-click" offsetXY="-62 30" onClick="OnLockHeadingClicked();" tooltip="Lock Current Heading">
      <Image class="nav-sphere-button-icon" sprite="Ui/Sprites/Flight/IconNavSphereLock" />
    </Image>
    <Image id="nav-sphere-prograde" class="nav-sphere-button audio-btn-click" offsetXY="0 30" onClick="OnProgradeClicked();" tooltip="Lock Velocity Prograde">
      <Image class="nav-sphere-button-icon" sprite="Ui/Sprites/Flight/IconNavSphereLockPrograde" />
    </Image>
    <Image id="nav-sphere-target" class="nav-sphere-button audio-btn-click" offsetXY="62 30" onClick="OnTargetClicked();" tooltip="Lock Target">
      <Image class="nav-sphere-button-icon" sprite="Ui/Sprites/Flight/IconNavSphereTargetMode" />
    </Image>
    <Image id="nav-sphere-visible" class="nav-sphere-button audio-btn-click" offsetXY="-62 -30" onClick="OnVisibleClicked();" tooltip="Show/Hide Nav Sphere">
      <Image class="nav-sphere-button-icon" sprite="Ui/Sprites/Flight/IconNavSphereHide" />
    </Image>
    <Image id="nav-sphere-retrograde" class="nav-sphere-button audio-btn-click" offsetXY="0 -30" onClick="OnRetrogradeClicked();" tooltip="Lock Velocity Retrograde">
      <Image class="nav-sphere-button-icon" sprite="Ui/Sprites/Flight/IconNavSphereLockRetrograde" />
    </Image>
    <Image id="nav-sphere-translation" class="nav-sphere-button audio-btn-click" offsetXY="62 -30" onClick="OnTranslationClicked();" tooltip="Translation Mode">
      <Image class="nav-sphere-button-icon" sprite="Ui/Sprites/Flight/IconNavSphereTranslationMode" />
    </Image>
  </Panel>
</XmlLayout>