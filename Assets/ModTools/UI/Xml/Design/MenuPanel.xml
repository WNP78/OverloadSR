<?xml version="1.0" encoding="utf-8"?>
<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\..\XmlLayout.xsd">
  <Include path="Ui/Xml/Design/DesignStyles.xml" />
  <Defaults></Defaults>
  <VerticalLayout childForceExpandHeight="false" padding="20" spacing="10">
    <Button class="btn btn-primary" rectAlignment="LowerLeft" onClick="OnDownloadCraftButtonClicked();" tooltip="Open your web browser to the crafts download page.">
      <TextMeshPro text="DOWNLOAD CRAFTS" />
    </Button>
    <Image class="separator" />
    <Button class="btn" rectAlignment="LowerLeft" onClick="OnNewCraftButtonClicked();" tooltip="Start over with a new craft.">
      <TextMeshPro text="NEW CRAFT" />
    </Button>
    <Button class="btn" rectAlignment="LowerLeft" onClick="OnLoadCraftButtonClicked();" tooltip="Load an existing craft from your hard drive.">
      <TextMeshPro text="LOAD CRAFT" />
    </Button>
    <Button class="btn" rectAlignment="LowerLeft" onClick="OnSaveCraftButtonClicked();" tooltip="Save this craft to your hard drive.">
      <TextMeshPro text="SAVE CRAFT" />
    </Button>
    <Button class="btn" rectAlignment="LowerLeft" onClick="OnShareCraftButtonClicked();" tooltip="Upload this craft to the website to share it with other players.">
      <TextMeshPro text="SHARE CRAFT" />
    </Button>
    <Image class="separator" />
    <Button class="btn btn-primary" rectAlignment="LowerLeft" onClick="OnPerformanceAnalyzerButtonClicked();" tooltip="Open the Analyze Performance window to view your craft's performance.">
      <TextMeshPro text="PERFORMANCE" />
    </Button>
    <Image class="separator" />
    <Button class="btn" rectAlignment="LowerLeft" onClick="OnSettingsButtonClicked();" tooltip="Open the settings window.">
      <TextMeshPro text="SETTINGS" />
    </Button>
    <Button class="btn" rectAlignment="LowerLeft" onClick="OnBugReportButtonClicked();" tooltip="Report a bug to the developers.">
      <TextMeshPro text="REPORT A BUG" />
    </Button>
    <Image class="separator" />
    <Button class="btn audio-btn-big" rectAlignment="LowerLeft" onClick="OnExitButtonClicked();" tooltip="Exit the designer back to the main menu.">
      <TextMeshPro text="EXIT" />
    </Button>
  </VerticalLayout>
</XmlLayout>